<% if @user.errors.any? %>
  <div id="error">
    <div class="alert alert-error">
      The form contains <%= pluralize(@user.errors.full_messages.uniq.count, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.uniq.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>