<% provide(:title, @user.name) %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10 offset1">
      <div style="float:left;padding-right:10px;"><%= gravatar_for @user %></div>
      <%= @user.name %><br />
      <%= @user.email %><br />
      <% if current_user != nil %>
      <%= link_to "Edit profile", edit_user_path(current_user) %>
      <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span8 offset2">
      <h3>Short Links</h3>
      <% if @user.links.any? %>
        <table class="table table-hover table-striped table-condensed links">
          <tr>
            <th>Short URL</th>
            <th>Long URL</th>
            <th>Total Clicks</th>
            <th>Last Visited</th>
            <%# <th>Date Created</th> %>
          </tr>
          <%= render @links %>
        </table>
        <span style="text-align: center"><%= will_paginate @links %></span>
      <% else %>
        <p>You haven't created any links yet.</p>
      <% end %>
    </div>
  </div>
</div>
