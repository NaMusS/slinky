<% provide(:title, "Dashboard") %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span1 hidden-phone"></div>
    <div class="span7">
      <h3>Short Links &nbsp;&nbsp;<%= link_to "New", new_link_path %></h3>
      <div id="links-table">
        <% if @user.links.any? %>
          <table class="table table-hover table-striped table-condensed links">
            <tr>
              <th></th>
              <th>Short URL</th>
              <th>Long URL</th>
              <th style="text-align: center;">Clicks</th>
              <th class="hidden-phone">Last Visited</th>
              <%# <th>Date Created</th> %>
            </tr>
            <%= render @links %>
          </table>
          <%= will_paginate @links %>
        <% else %>
          <p>You haven't created any links yet.</p>
        <% end %>
      </div>
    </div>
    <div class="span3">
      <%= render 'users/sidebar' %>
    </div>
  </div>
</div>
