<% provide(:title, "New Link") %>

<div class="container">
  <%= render 'users/user_header' %>
  <div class="row">
    <div class="main span4 offset4">
      <h1>New Link</h1>
      Use this page to create your new link.<br />
      Short link cannot contain special characters.<br /><br />
      <%= form_for(@link) do |f| %>
        <%= render 'links/link_errors' %>
        <%= f.label :short_url %>
        <%= f.text_field :short_url, :placeholder => "Short URL, e.g. 'random' or 'short-link'" %>

        <%= f.label :long_url %>
        <%= f.text_field :long_url, :placeholder => "Long URL, e.g. http://google.com"  %>

        <%= f.submit "Create Link", class: "btn btn-large btn-default" %>
      <% end %>

    </div>
  </div>
</div>